  <%= render 'shared/errors', obj: @metal %>
  
  <%= form_for(@metal, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="col-sm-2 control-label">
        <%= f.label :name %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter name of Metal" %>
    </div>
  </div>
 
   <div class="form-group">
    <div class="col-sm-2 control-label">
        <%= f.label :metal_code %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :metal_code, class: 'form-control', placeholder: "Enter metal code" %>
    </div>
  </div>
 
   <div class="form-group">
      <div class = 'row'>
          <div class="col-sm-offset-2 col-sm-8">
              <%= f.collection_radio_buttons :metal_category_ids, MetalCategory.all, :id, :name do |cb| %>
                  <% cb.label(class: "checkbox-inline input_checkbox") {cb.radio_button(class: "checkbox") + cb.text} %>
              <% end %>
          </div> 
      </div>
  </div>
 
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-success btn-lg' %>
    </div>
  </div>
<% end %>