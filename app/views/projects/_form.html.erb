  <%= render 'shared/errors', obj: @project %>
  
  <%= form_for(@project, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="col-sm-2 control-label">
        <%= f.label :name %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder: "Name of Project" %>
    </div>
  </div>
  
    <div class="form-group">
    <div class="col-sm-2 control-label">
        <%= f.label :description %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :description, rows: 10,  class: 'form-control' %>
    </div>
  </div>
  
    <div class="form-group">
    <div class="col-sm-2 control-label">
        <%= f.label :start_date %>
    </div>
    <div class="col-sm-10">
      <%= f.date_field :start_date, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 control-label">
        <%= f.label :end_date %>
    </div>
    <div class="col-sm-10">
      <%= f.date_field :end_date, class: 'form-control' %>
    </div>
  </div>
  
  <% if form_type == 'new' %>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :customer %>
      </div>
      <div class="col-sm-10">
        <%= f.select :customer, options_for_select(Project.customer_options, params[:customer]), {}, class: 'form-control' %>
      </div>
    </div>
  <% end %>
 
 <% if form_type == 'edit' %>
 
 <div class="form-group">
    <div class="col-sm-2 control-label">
        <%= f.label :project_complete %>
    </div>
    <div class="col-sm-2">
      <%= f.check_box :project_complete, class: 'form-control' %>
    </div>
  </div>
 
 <% end %>
 
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-success btn-lg' %>
    </div>
  </div>
<% end %>