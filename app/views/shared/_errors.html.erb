
<% if obj.errors.any? %>
    <div class = 'col-md-10 col-md-offset-2'>
        <div class="panel panel-danger">
            <div class="panel-heading"><%= pluralize(obj.errors.count, 'error') %></div>
            <div class="panel-body">
                <ol>
                    <% obj.errors.full_messages.each do |error| %>
                        <li><%= error %></li>
                    <% end %>
                </ol>

          </div>
        </div>
    </div>
<% end %>