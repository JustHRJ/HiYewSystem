  <%= render 'shared/errors', obj: @metal_category %>
  
  <%= form_for(@metal_category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="col-sm-2 control-label">
        <%= f.label :name %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter name of Metal" %>
    </div>
  </div>
 
 
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-success btn-lg' %>
    </div>
  </div>
<% end %>